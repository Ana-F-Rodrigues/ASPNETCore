@model MinhaDemoMVC.Models.Filme

@{
    ViewData["Title"] = "Adicionar Novo Filme";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">

        <form asp-action="Adicionar">

            <div class="form-group">
                <label asp-for="Titulo" class="form-control"></label>
                <input asp-form="Titulo" class="form-control" />

            </div>
              <div class="form-group">
                <label asp-for="DataLancamento" class="form-control"></label>
                <input asp-form="DataLancamento" class="form-control" />

            </div>
              <div class="form-group">
                <label asp-for="Genero" class="form-control"></label>
                <input asp-form="Genero" class="form-control" />

            </div>
              <div class="form-group">
                <label asp-for="Valor" class="form-control"></label>
                <input asp-form="Valor" class="form-control" />

            </div>
             <div class="form-group">
                <label asp-for="Avaliacao" class="form-control"></label>
                <input asp-form="Avaliacao" class="form-control" />

            </div>
            <div class="form-group">
                <input type= "submit" value="Adicionar" class="btn btn-primary"/>
            </div>

        </form>


    </div>

</div>